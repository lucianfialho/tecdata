# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tecdata
POSTGRES_USER=tecdata_user
POSTGRES_PASSWORD=tecdata_pass

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://tecdata_user:tecdata_pass@localhost:5432/tecdata

# API Configuration
TECMUNDO_API_BASE_URL=https://www.tecmundo.com.br
TECMUNDO_API_ENDPOINT=/api/posts?endpoint=home-author

# Collection Settings
COLLECTION_INTERVAL_HOURS=6
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
BACKOFF_FACTOR=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/tecdata.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Rate Limiting
REQUESTS_PER_MINUTE=10
MIN_REQUEST_INTERVAL_SECONDS=6